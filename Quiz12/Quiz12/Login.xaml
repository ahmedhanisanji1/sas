        <Button Click="Logbutt" Content="LOG-IN" HorizontalAlignment="Left" Margin="29,364,0,0" VerticalAlignment="Top" Height="40" Width="99" FontSize="20" Background="#FFE5A705"/>
        <Button Click="signup_button" Content="Sign-up" HorizontalAlignment="Left" Margin="29,281,0,0" VerticalAlignment="Top" Height="40" Width="99" FontSize="20" BorderBrush="#FF160D0D" Background="#FFE5A705"/>

